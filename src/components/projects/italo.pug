    figure.project__logo(style={'background-color': '#06231a'})
        picture
            source(media="(min-width: 576px)" data-srcset="./assets/img/projects/italo-logo.webp" type="image/webp")
            source(media="(min-width: 576px)" data-srcset="./assets/img/projects/italo-logo.png" type="image/png")
            source(media="(max-width: 576px)" data-srcset="./assets/img/projects/sizes/italo-logo-sm.webp" type="image/webp")
            source(media="(max-width: 576px)" data-srcset="./assets/img/projects/sizes/italo-logo-sm.png" type="image/png")
            img.lazy(data-src="./assets/img/projects/italo-logo.png" alt="Ítalo Iung - Logo")
