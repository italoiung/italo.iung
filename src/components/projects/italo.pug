    figure.project__fundo
        picture
            source(media="(min-width: 1200px)" data-srcset="./assets/img/projects/italo.webp" type="image/webp")
            source(media="(min-width: 1200px)" data-srcset="./assets/img/projects/italo.jpg" type="image/jpeg")
            source(media="(max-width: 1200px)" data-srcset="./assets/img/projects/sizes/italo-lg.webp" type="image/webp")
            source(media="(max-width: 1200px)" data-srcset="./assets/img/projects/sizes/italo-lg.jpg" type="image/jpeg")
