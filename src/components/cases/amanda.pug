                    source(media="(max-width: 576px)" data-srcset="./assets/img/projects/sizes/amanda-admin-sm.webp" type="image/webp")
                    source(media="(max-width: 576px)" data-srcset="./assets/img/projects/sizes/amanda-admin-sm.jpg" type="image/jpeg")
                    img.lazy(data-src="./assets/img/projects/amanda-admin.jpg" alt="Painel administrativo" title="Painel administrativo")